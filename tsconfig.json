{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],

    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
